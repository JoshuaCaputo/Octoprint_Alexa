<div id="octoalexa">
    <div id="heading" class="text-center">
    	<h4>Alexa Voice Services</h4>
    	<p>Control My Robo with your Amazon Alexa enable device.</p>
    	<hr>
    </div>
    
    <div id="active" class="" style="text-align:center;">
    	<table class="table table-striped table-hover table-condensed table-hover" id="settings_printerProfiles_profiles">
        <thead>
        <tr>
            {# <th class="">Device</th> #}
            <th class="" >Alexa Code</th>
            <th class="">Service Status</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            {# <td><span>{{ plugin_octoalexa_deviceidentifier }}</span></td> #}
            <td id = "mfakey">Click Register to generate key</td>
            <td id = "service">{{plugin_octoalexa_service_enabled}}</td>
        </tr>
        </tbody>
    	</table>
        <p class="text-left">
            <button id="register" class="btn btn-warning" data-bind="click: register_pi">Register Device</button>
            <button id="plugin_toggle_service" class="btn btn-warning" data-bind="click: toggle_service">{{ plugin_octoalexa_service }} </button>
        </p>
        <label class = "text-center">
            <b style="color:red;">IMPORTANT:</b> Cick the save button after finishing registration with Alexa!
        </label>
    </div>
</div>